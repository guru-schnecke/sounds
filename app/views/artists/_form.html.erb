<div class="container">
<%= form_for @artist do |f| %>

<div class="form-row">
    <%= f.label :name, "Artist Name" %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-row">
    <%= f.label :location, "Artist Location" %>
    <%= f.text_field :location, class: "form-control" %>
</div>
<div class="form-row">
    <%= f.label :hometown, "Artist Hometown" %>
    <%= f.text_field :hometown, class: "form-control" %>
</div>
<div class="form-row">
    <%= f.label :year, "Artist Year" %>
    <%= f.text_field :year, class: "form-control" %>
</div>
<div class="form-row mb-3">
    <%= f.label :age, "Artist Age" %>
    <%= f.text_field :age, class: "form-control" %>
</div>

<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>