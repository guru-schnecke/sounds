<h1>Albums#new</h1>
<p>Find me in app/views/albums/new.html.erb</p>

<%= form_for  @album do |f| %>
    <div class="form-row">
        <%= f.label :name, "Album Name"%>
        <%= f.text_field :name %>
    </div>
    <div class="form-row">
        <%= f.label :cover, "Album Cover"%>
        <%= f.text_field :cover %>
    </div>
    <div class="form-row">
        <%= f.label :year, "Album Year"%>
        <%= f.text_field :year %>
    </div>
    <div class="form-row">
        <%= f.label :number_of_songs, "Number of Songs"%>
        <%= f.text_field :number_of_songs %>
    </div>
    
    <%= f.submit %>
<% end %>
